<h1>To-do List</h1>

<h2>Tasks: </h2>


  {{#each items}}
    {{#unless complete}}
      {{> status/status-block status=1}}
    {{/unless}}
  {{/each}}

<h2> <button class="delete">Clear</button> Completed:</h2>

  {{#each items}}
    {{#if complete}}
        {{> status/status-block status=0}}
    {{/if}}
  {{/each}}


<h2>Add new task</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca"></label>
    <input type="text" id="task-input" name="name">
  </div>
    
  <button type="submit">Insert</button>
</form>
